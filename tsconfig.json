{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "experimentalDecorators": true,
        "lib": [
            "es2015", "es2016", "es6"
        ],
        "outDir": "bin",
        "sourceMap": true
    },
    "compileOnSave": true,
    "include": [
        "src/*",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ]
}