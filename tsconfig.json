{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es2017",
      "dom"
    ],
    "target": "es2017",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
